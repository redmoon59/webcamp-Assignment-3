<div class="container">
<div class="row">
<div class="mx-auto">
<h1>User info</h1>
<%= form_with model:@user do |f| %>
<div>
 <label for="inputName">Name</label><br>
 <%= f.text_field :name, autofocus: true, id:"inputName", placefolder:"Name" %>
</div>
<div>
 <label for="inputImage">Image</label><br>
 <%= f.file_field :profile_image, placefolder: "file", accept: "image/*" %>
</div>
<div>
 <label for="introduction">Introduction</label><br>
 <%= f.text_area :introduction, autofocus: true, id:"introduction", placeholder:"introduction" %>
</div>
<di>
 <%= f.submit "Update User", class: "btn btn-success" %>
</div>
<% end %>

</div>
</div>
</div>