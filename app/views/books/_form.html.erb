
<h2>New book</h2>
<%= form_with model: book, url: books_path, method: :post do |f| %> 
 <div>
   <%= f.label :Title %>
   <%= f.text_field :title %>
 </div>
 <div>
   <%= f.label :Opinion %>
   <%= f.text_area :body %>
  </div>
  
 <div>
 <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
 </div>
 
<% end %>
